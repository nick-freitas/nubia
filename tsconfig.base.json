{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nubia/api/data-models/chapter": [
        "libs/api/data-models/chapter/src/index.ts"
      ],
      "@nubia/api/data-models/reading-session": [
        "libs/api/data-models/reading-session/src/index.ts"
      ],
      "@nubia/api/data-models/gamebook": [
        "libs/api/data-models/gamebook/src/index.ts"
      ],
      "@nubia/api/data-models/progression": [
        "libs/api/data-models/progression/src/index.ts"
      ],
      "@nubia/api/data-models/user": ["libs/api/data-models/user/src/index.ts"],
      "@nubia/api/db-client": ["libs/api/db-client/src/index.ts"],
      "@nubia/api/reader-api": ["libs/api/reader-api/src/index.ts"],
      "@nubia/nubia-reader/data-access/gamebook-library": [
        "libs/nubia-reader/data-access/gamebook-library/src/index.ts"
      ],
      "@nubia/nubia-reader/features/book-shelf": [
        "libs/nubia-reader/features/book-shelf/src/index.ts"
      ],
      "@nubia/nubia-reader/features/reading": [
        "libs/nubia-reader/features/reading/src/index.ts"
      ],
      "@nubia/nubia-reader/shell": ["libs/nubia-reader/shell/src/index.ts"],
      "@nubia/nubia-reader/tokens": ["libs/nubia-reader/tokens/src/index.ts"],
      "@nubia/nubia-reader/ui": ["libs/nubia-reader/ui/src/index.ts"],
      "@nubia/shared/api-interfaces": [
        "libs/shared/api-interfaces/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
