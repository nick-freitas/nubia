{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nubia/api/data-models/chapter": [
        "libs/api/data-models/chapter/src/index.ts"
      ],
      "@nubia/api/data-models/gamebook": [
        "libs/api/data-models/gamebook/src/index.ts"
      ],
      "@nubia/api/data-models/progression": [
        "libs/api/data-models/progression/src/index.ts"
      ],
      "@nubia/api/data-models/user": ["libs/api/data-models/user/src/index.ts"],
      "@nubia/nubia-reader/home": ["libs/nubia-reader/home/src/index.ts"],
      "@nubia/nubia-reader/shared/data-access/library": [
        "libs/nubia-reader/shared/data-access/library/src/index.ts"
      ],
      "@nubia/nubia-reader/shared/tokens": [
        "libs/nubia-reader/shared/tokens/src/index.ts"
      ],
      "@nubia/nubia-reader/shell": ["libs/nubia-reader/shell/src/index.ts"],
      "@nubia/shared/api-interfaces": [
        "libs/shared/api-interfaces/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
